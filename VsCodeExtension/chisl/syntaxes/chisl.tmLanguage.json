{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CHISL",
	"patterns": [
		{
			"include": "#commentBlocks"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#words"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"commentBlocks": {
			"name": "comment.block.chisl",
			"begin": "#",
			"end": "($|\n|#)"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.chisl",
				"match": "(?i)\\b(Capture|Set|Get|Load|Save|Delete|Copy|Crop|Find( all)?( text)?|Draw|Wait|Pause|Print|Show|Set|Move|Press|Release|Click|Scroll|Type|Label|Goto|Read|Record|Run|Open|Count|Echo|mouse|key)\\b"
			}]
		},
		"words": {
			"patterns": [{
				"name": "keyword.other.chisl",
				"match": "(?i)\\b(at|to|from|by|in|with|if|h|m|s|ms|left|middle|right|block|paragraph|symbol|line|word|on|off|times)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.chisl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.chisl",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.chisl",
				"match": "\\b-?\\d*\\.?\\d+\\b"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.chisl",
				"match": "(==|!=|<=?|>=?|\\.)"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.name.chisl",
				"match": "\\b[a-zA-Z][a-zA-Z0-9]*\\b"
			}]
		}
	},
	"scopeName": "source.chisl"
}