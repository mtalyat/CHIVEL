{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CHISL",
	"patterns": [
		{
			"include": "#commentLine"
		},
		{
			"include": "#commentBlock"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#words"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"commentLine": {
			"name": "comment.line.chisl",
			"begin": "#[^-]",
			"end": "[\r\n$]"
		},
		"commentBlock": {
			"name": "comment.block.chisl",
			"begin": "#-",
			"end": "-#"
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.chisl",
				"match": "(?i)\\b(Capture|Set|Get|Load|Save|Delete|Copy|Crop|Find( all)?( text)?|Draw|Wait|Pause|Print|Show|Set|Move|Press|Release|Click|Scroll|Type|Label|Goto|Read|Record|Run|Open|Count|Configure|mouse|key|at|to|from|by|in|with|if|times|delay|on)\\b"
			}]
		},
		"words": {
			"patterns": [{
				"name": "keyword.other.chisl",
				"match": "(?i)\\b(left|middle|right|block|paragraph|symbol|line|word|true|false|h|m|s|ms|escape|space|enter|return|tab|shift|ctrl|alt|left|up|right|down|backspace|back)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.chisl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.chisl",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric.chisl",
				"match": "\\b-?\\d*\\.?\\d+\\b"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.chisl",
				"match": "(==|!=|<=?|>=?|\\.)"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.name.chisl",
				"match": "\\b[a-zA-Z]\\w*\\b"
			}]
		}
	},
	"scopeName": "source.chisl"
}